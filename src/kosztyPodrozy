import java.util.Scanner;
public class Podroz{
        public static void main(String[] args){

            Scanner scanner=new Scanner(System.in);
            System.out.println("--Koszty podróży--");
            System.out.println("");
	
            System.out.println("Podaj odległość w km:");
            int iloscKilometrow=scanner.nextInt();
            System.out.println (iloscKilometrow);
            
		
            System.out.println("Podaj cenę paliwa /l:");
            double cenaPaliwa=scanner.nextDouble();
            System.out.println(cenaPaliwa);
            
	
            System.out.println("Podaj spalanie pojazdu:");
            double spalanieNa100Km=scanner.nextDouble();
            System.out.println(spalanieNa100Km);
            
		
            String komunikat = (("Koszt podróży w dwie strony = " + ((iloscKilometrow/100)*cenaPaliwa*spalanieNa100Km)*2)+ " zł");
            
            System.out.println(komunikat.toUpperCase());
        }
        
    	
   	public static double round2DecimalPlace(double komunikat) {
            return Math.round(komunikat*100.00)/100.00;
        }
}


	
	
	
	
	
		































	



            
		



            
	



            
		

          



        
    



	
	
	
	
	
		
