import java.util.Scanner;

public class IfKtoraLiczbaJestWieksza{

    public static void main(String[] args) {


        Scanner scanner = new Scanner(System.in);

        System.out.println("podaj pierwsza liczbę");
        int number1 = Integer.valueOf(scanner.nextInt());
        System.out.println("podałeś " + number1);
        System.out.println("podaj druga liczbę");
        int number2 = Integer.valueOf(scanner.nextInt());
        System.out.println("podales "+ number2);


        if (number1 > number2){
            System.out.println("wieksza jest liczba "+number1);
        }else if (number1<number2){
            System.out.println("wieksza jest liczba "+number2);
        }else{	System.out.println("liczby sa rowne");

        }
    }
}
